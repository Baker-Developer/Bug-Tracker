@model IEnumerable<BugTracker.Models.Ticket>
@using BugTracker.Models.Enums



<div class="col-md-12 col">
    <div class="mt-5 ">
        <div class="card m-1 p-2">
            <div class="">
                <h2>Unassigned Tickets</h2>
            </div>
            <div class="body">
                <div class="table-responsive"  style="overflow-y:auto;height:600px;">
                    <table id="myTable" class="table table-hover">
                        <thead class="">
                            <tr>
                                @* Table header *@
                                <th>Title</th>
                                <th>Developer</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* Table body *@
                            @foreach (var ticket in Model.OrderByDescending(d => d.Created))
                            {
                                <tr>
                                    <td><a asp-action="Details" asp-controller="Tickets" asp-route-id="@ticket.Id" style=""><strong>@ticket.Title</strong></a> </td>
                                    <td>
                                        @if (ticket.DeveloperUserId != null)
                                        {
                                            @ticket.DeveloperUser?.FullName
                                        }
                                        else
                                        {
                                            if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                                            {
                                                <a class="btn btn-xs btn-primary" asp-action="AssignDeveloper" asp-controller="Tickets" asp-route-id="@ticket.Id">Assign Dev</a>
                                            }

                                        }
                                    </td>
                                    @if (ticket.TicketStatus.Name == "New")
                                    {
                                        <td><span class="">@ticket.TicketStatus.Name </span></td>

                                    }
                                    else
                                    {
                                        <td><span class="">@ticket.TicketStatus.Name </span></td>
                                    }
                                    <td><span class="">@ticket.TicketPriority.Name </span></td>
                                    <td>@ticket.Created.ToString("MM-dd-yyyy")</td>
                                    <td>


                                        <a class="" asp-action="Details" asp-controller="Tickets" asp-route-id="@ticket.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M8 10.5378C8 9.43327 8.89543 8.53784 10 8.53784H11.3333C12.4379 8.53784 13.3333 9.43327 13.3333 10.5378V19.8285C13.3333 20.9331 14.2288 21.8285 15.3333 21.8285H16C16 21.8285 12.7624 23.323 10.6667 22.9361C10.1372 22.8384 9.52234 22.5913 9.01654 22.3553C8.37357 22.0553 8 21.3927 8 20.6832V10.5378Z" fill="currentColor"></path>
                                                <rect opacity="0.4" x="8" y="1" width="5" height="5" rx="2.5" fill="currentColor"></rect>
                                            </svg>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}