@model BugTracker.Models.Invite

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section VendorCSS {
    <link rel="stylesheet" href="~/vendor/sweetalert/sweetalert.css" />
    <link rel="stylesheet" href="~/css/inbox.css">
}

<h1>Company Invite (Work In Progress)</h1>

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="mobile-left">
                <a class="btn btn-primary toggle-email-nav collapsed" data-toggle="collapse" href="#email-nav" role="button" aria-expanded="false" aria-controls="email-nav">
                    <span class="btn-label">
                        <i class="la la-bars"></i>
                    </span>
                    Menu
                </a>
            </div>
            <div class="mail-inbox">
                <div class="mail-left collapse" id="email-nav">
                    <div class="mail-compose m-b-20">
                        <a href="@Url.Action("Compose","App")" class="btn btn-danger btn-block">Compose</a>
                    </div>
                    <div class="mail-side">
                        <ul class="nav">
                            <li class="active"><a href="javascript:void(0);"><i class="icon-envelope"></i>Inbox<span class="badge badge-primary float-right">##</span></a></li>

                        </ul>

                    </div>
                </div>
                <div class="mail-right">
                    <div class="header d-flex align-center">
                        <h2>Inbox</h2>
                        <form class="ml-auto">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search Mail" aria-label="Search" aria-describedby="search-mail">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="search-mail"><i class="icon-magnifier"></i></span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="mail-action clearfix">
                    </div>
                    <div class="mail-list">
                        <ul class="list-unstyled">
                            <li class="clearfix">
                                <div class="mail-detail-left">
                                    <label class="fancy-checkbox">
                                        <input type="checkbox" name="checkbox" class="checkbox-tick">
                                        <span></span>
                                    </label>
                                    <a href="javascript:void(0);" class="mail-star active"><i class="fa fa-star"></i></a>
                                </div>
                                <div class="mail-detail-right">
                                    <h6 class="sub"><a href="javascript:void(0);" class="mail-detail-expand">###</a> <span class="badge badge-default mb-0">###</span></h6>
                                    <p class="dep"><span class="m-r-10">[##]</span>###</p>
                                    <span class="time">###</span>
                                </div>

                            </li>

                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    <script src="~/vendor/sweetalert/sweetalert.min.js"></script> <!-- SweetAlert Plugin Js -->
    <script src="~/js/pages/ui/dialogs.js"></script>
}
