@model IEnumerable<BugTracker.Models.Project>
@using BugTracker.Models.Enums
@using Microsoft.AspNetCore.Identity
@using BugTracker.Services.Interfaces
@inject UserManager<BugTrackerUser> UserManager
@inject IBugTrackerProjectService ProjectService

@{
    ViewData["Title"] = "My Projects";
    BugTrackerUser bugTrackerUser = await UserManager.GetUserAsync(User);
}




<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">All Projects</h4>
                    @if (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.ProjectManager)))
                    {
                        <p>
                            <a asp-action="Create" class="btn btn-success mt-3">Create New</a>
                        </p>
                    }
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive mt-4">
                    <table id="myTable" class="table table-striped table-bordered border-dark mb-0" role="grid">
                        <thead class="flex-fill">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                    @*@Html.DisplayNameFor(model => model.StartDate)*@
                                </th>
                                @*   <th>
                                @Html.DisplayNameFor(model => model.Description)
                                </th>*@
                                @*    <th>
                                @Html.DisplayNameFor(model => model.StartDate)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                @*      <th>
                                @Html.DisplayNameFor(model => model.ImageFileName)
                                </th>*@
                                @*  <th>
                                @Html.DisplayNameFor(model => model.ImageFileData)
                                </th>*@
                                <th>
                                    @Html.DisplayNameFor(model => model.Archived) <span>Status</span>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProjectPriority)
                                </th>
                                
                                <th>
                                    @*@Html.DisplayNameFor(model => model.ImageContentType)*@
                                </th>
                            
                             @*   <th>
                                    @Html.DisplayNameFor(model => model.Company)
                                </th>*@
              
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {



                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name) <hr>
                                        <span>Created On</span> @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    @*   <td>
                                @Html.DisplayFor(modelItem => item.Description)
                                </td>*@
                                    @*    <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                                </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    @*      <td>
                                @Html.DisplayFor(modelItem => item.ImageFileName)
                                </td>*@
                                    @*        <td>
                                @if (item.ImageFileData != null)
                                {
                                <img class="img-fluid" style="width:120px; height:90px" src="data:image/*;base64,@(Convert.ToBase64String(item.ImageFileData))">
                                }

                                </td>
                                *@
                                    <td>
                                        @if (!item.Archived)
                                        {
                                            <img src="~/img/logos/openDocument.png" width="50" height="50"> 
                                        }
                                        else if (item.Archived)
                                        {
                                            <img src="~/img/logos/archivedDocument.png" width="50" height="50"> <span>Project Is Archived</span>
                                        }


                                    </td>
                                   @* <td>
                                        @Html.DisplayFor(modelItem => item.Company.Name)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProjectPriority.Name)
                                    </td>
                                    <td>
                                     
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>


                                        @{
                                            bool isProjectPM = (await ProjectService.GetProjectManagerAsync(item.Id))?.Id == bugTrackerUser.Id;
                                        }

                                        @if (User.IsInRole(nameof(Roles.Admin)) || isProjectPM)
                                        {

                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                                            @if (item.Archived)
                                            {
                                                <a asp-action="Restore" asp-route-id="@item.Id">Restore</a>
                                            }
                                            else
                                            {

                                                <a asp-action="Archive" asp-route-id="@item.Id">Archive</a>

                                            }
                                        }

                                    </td>
                                 
                                </tr>
                            }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}