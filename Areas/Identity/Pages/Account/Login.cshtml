@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    ViewData["MainMenu"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="card">
    <div class="header">
        <p class="lead">Login to your account</p>
    </div>
    <div class="body">
        <form id="account" method="post" class="form-auth-small">
            <div class="form-group">
                <label asp-for="Input.Email" class="control-label sr-only">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email" asp-for="Input.Email">
                <span asp-validation-for="Input.Email" class="text-danger" style="text-decoration: none"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="control-label sr-only">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" id="password" placeholder="Password">
            </div>
            <div class="form-group clearfix">
                <label class="fancy-checkbox element-left">
                    <input asp-for="Input.RememberMe" type="checkbox">
                    <span>Remember me</span>
                </label>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>
            <div class="bottom">
                <span class="helper-text m-b-10"><i class="fa fa-lock"></i> <a asp-page="./ForgotPassword">Forgot password?</a></span>
            </div>
            <hr />
            <p class="lead text-center">Demo The Application</p>
            <div class="container">
                <div class="row">
                    <div class="col-6"><button class="btn btn-primary btn-sm" onclick="setAdminDemoValue()">Demo Admin</button></div>
                    <div class="col-6"><button class="btn btn-primary btn-sm" onclick="setProjectManagerDemoValue()">Demo Project Manger</button></div>
                    <div class="col-6"><button class="btn btn-primary btn-sm" onclick="setDemoSubmitterDemoValue()">Demo Submitter</button></div>
                    <div class="col-6"><button class="btn btn-primary btn-sm" onclick="setDeveloperDemoValue()">Demo Developer</button></div>
                    <div class="col-6"><button class="btn btn-primary btn-sm" onclick="setDevNewUserDemoValue()">Demo New User</button></div>
                </div>
            </div>
        </form>
    </div>
</div>

<!--Bootstrap-->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/popper.min.js"></script>
<script src="~/bootstrap/js/bootstrap.min.js"></script>

<script src="~/js/Custom.js"></script>

